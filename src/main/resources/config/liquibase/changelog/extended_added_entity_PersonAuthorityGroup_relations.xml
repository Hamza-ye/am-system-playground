    <!--
        Add person_membership relation table.
    -->
    <changeSet id="extended-person_authority_group_authorities" author="Hamza">

        <createTable tableName="person_authority_group_authorities">
            <column name="authority_group_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="authority" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="authority_group_id, authority" tableName="person_authority_group_authorities"/>

    </changeSet>
    <changeSet id="extended-person_authority_group_authorities_Constraints" author="Hamza">

        <addForeignKeyConstraint baseColumnNames="authority_group_id"
                                 baseTableName="person_authority_group_authorities"
                                 constraintName="fk_person_authority_group_authorities__person_role_id"
                                 referencedColumnNames="id"
                                 referencedTableName="person_authority_group"/>

        <addForeignKeyConstraint baseColumnNames="authority"
                                 baseTableName="person_authority_group_authorities"
                                 constraintName="fk_person_role_members__authority_id"
                                 referencedColumnNames="name"
                                 referencedTableName="app_authority"/>

    </changeSet>

