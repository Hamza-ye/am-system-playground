    <!--
        Added the constraints for entity Period.
    -->
    <changeSet id="20211031234336-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="period_type_id"
                                 baseTableName="period"
                                 constraintName="fk_period__period_type_id"
